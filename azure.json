{
  "name": "Python 3.13",
  "build": {
    "python": "3.13",
    "commands": [
      "pip install --upgrade pip",
      "pip install -r Requirements.txt"
    ]
  },
  "routes": [
    {
      "route": "/*",
      "serve": "proyecto.wsgi:application",
      "engine": "gunicorn"
    }
  ],
  "mounts": {
    "/static": {
      "handle": "FileSystem",
      "source": "staticfiles"
    }
  },
  "env": {
    "DJANGO_SETTINGS_MODULE": "proyecto.settings",
    "PYTHONPATH": "/home/site/wwwroot"
  }
}